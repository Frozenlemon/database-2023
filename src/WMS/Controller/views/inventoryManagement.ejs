        async function renderDisplay() {
            const whInventList = await getwhInvent()
            const tableBody = document.getElementById('whInvent')
            console.log(whInventList)
            whInventList.forEach(data => {
                const warehouse = data.warehouse;
                const inventory = data.inventory;
                console.log(typeof (inventory))



                // Display Warehouse
                const whRow = document.createElement('tr')
                whRow.setAttribute('data-toggle', 'collapse')
                whRow.setAttribute('data-target', `#${warehouse.name}InventTable`)
                whRow.setAttribute('class', 'accordion-toggle')

                const showInventBtn = document.createElement('td')
                const btn = document.createElement('button')
                btn.setAttribute('class', 'btn btn-primary')
                showInventBtn.append(btn)

                const whName = document.createElement('td')
                whName.innerText = `${warehouse.name}`

                const whAddress = document.createElement('td')
                whAddress.innerText = `${warehouse.address}`

                const whVolume = document.createElement('td')
                whVolume.innerText = `${warehouse.volume}`

                const whFillVolume = document.createElement('td')
                whFillVolume.innerText = `${warehouse.fillVolume}`

                whRow.append(showInventBtn, whName, whAddress, whVolume, whFillVolume,)



                // Initialize area for Inventory
                const inventRow = document.createElement('tr')
                const inventRowData = document.createElement('td')
                inventRowData.setAttribute('colspan', '12')
                inventRowData.setAttribute('class', 'hiddenrow')

                inventRowDiv = document.createElement('div')
                inventRowDiv.id = `${warehouse.name}InventTable`
                inventRowDiv.className = "accordian-body collapse"

                const inventTable = document.createElement('table')
                inventTable.className = "table table-hover"

                const inventHeader = document.createElement('thead')

                const headerData = document.createElement('tr')

                const headerSpace = document.createElement('th')
                const headerName = document.createElement('th')
                headerName.innerText = 'Product'
                const headerCate = document.createElement('th')
                headerCate.innerText = 'Category'
                const headerSize = document.createElement('th')
                headerSize.innerText = 'Size'
                const headerQuantity = document.createElement('th')
                headerQuantity.innerText = 'Quantity'

                headerData.append(headerSpace, headerName, headerCate, headerSize, headerQuantity)
                inventHeader.append(headerData)


                const inventBody = document.createElement('tbody');

                inventory.forEach((item) => {
                    const itemData = document.createElement('tr')

                    const itemSpace = document.createElement('td')
                    const itemName = document.createElement('td')
                    itemName.innerText = `${item.name}`
                    const itemCate = document.createElement('td')
                    itemCate.innerText = `${item.category}`
                    const itemSize = document.createElement('td')
                    itemSize.innerText = `${item.size}`
                    const itemQuantity = document.createElement('td')
                    itemQuantity.innerText = `${item.quantity}`

                    itemData.append(itemSpace, itemName, itemCate, itemSize, itemQuantity)
                    inventBody.append(itemData)
                });

                inventTable.append(inventHeader, inventBody)
                inventRowDiv.append(inventTable)
                inventRowData.append(inventRowDiv)
                inventRow.append(inventRowData)

                tableBody.append(whRow, inventRow)





            });
        }


        $(document).ready(() => {
            renderDisplay()
        })
